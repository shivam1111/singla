            />
		
		<!-- Material Feature -->
		<record id="view_material_feature_tree" model="ir.ui.view">
		    <field name="name">material.feature.tree</field>
		    <field name="model">material.feature</field>
		    <field name="arch" type="xml">
		        <tree string="Features" editable="top">
